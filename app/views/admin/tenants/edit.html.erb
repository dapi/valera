<%#
# Edit Tenant

Custom edit view with webhook management link in header.
%>

<% content_for(:title) { t("administrate.actions.edit_resource", name: page.page_title) } %>

<header class="main-content__header">
  <h1 class="main-content__page-title">
    <%= content_for(:title) %>
  </h1>

  <div>
    <% if page.resource.persisted? %>
      <%= link_to(
        "Создать приглашение",
        new_admin_tenant_invite_path(tenant_id: page.resource.id),
        class: "button button--primary"
      ) %>

      <%= link_to(
        "#{t('admin.tenants.form.dashboard')} ↗".html_safe,
        page.resource.dashboard_url,
        class: "button button--outline",
        target: "_blank"
      ) %>

      <%= link_to(
        t("admin.tenants.form.webhook_management"),
        admin_tenant_webhook_path(page.resource),
        class: "button button--outline"
      ) %>
    <% end %>

    <%= link_to(
      t("administrate.actions.show_resource", name: page.page_title),
      [namespace, page.resource],
      class: "button",
    ) if accessible_action?(page.resource, :show) %>
  </div>
</header>

<section class="main-content__body">
  <%= render "form", page: page %>
</section>
