<div class="field-unit__label">
  <%= f.label field.attribute %>
</div>
<div class="field-unit__field">
  <div style="display: flex; align-items: center;">
    <%= f.text_field field.attribute,
        style: 'flex: 0 0 auto; width: auto; min-width: 150px; border-top-right-radius: 0; border-bottom-right-radius: 0;',
        placeholder: 'subdomain' %>
    <span style="background-color: #e9ecef; border: 1px solid #ced4da; border-left: none; padding: 0.375rem 0.75rem; border-radius: 0 0.25rem 0.25rem 0; color: #495057; white-space: nowrap;">
      <%= field.domain_suffix %>
    </span>
  </div>
</div>
