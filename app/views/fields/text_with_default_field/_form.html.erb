<div class="text-with-default-wrapper">
  <div class="text-with-default-label">
    <%= f.label field.attribute %>
  </div>
  <%= f.text_area field.attribute,
      placeholder: field.has_default? ? field.default_value : nil,
      rows: field.rows,
      class: "text-with-default-textarea" %>
  <% if field.has_default? %>
    <small class="form-text text-muted">
      Если оставить пустым — используется значение по умолчанию
    </small>
  <% end %>
  <% if field.hint.present? %>
    <div class="form-text text-muted" style="margin-top: 0.5rem;">
      <%= field.hint.html_safe %>
    </div>
  <% end %>
</div>
